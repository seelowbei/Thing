.row
  .col-md-offset-1.col-md-10.col-md-offset-1
    %h4.black Reset Password
.row
  .col-md-1
  .col-md-10.well
    = form_for(@user, :html => { class: "form-horizontal" }) do |f|

      .form-group
        = f.label :email, class: "control-label col-lg-2 black"
        .col-lg-6
          .form-control-static.black
            = @user.email

      .form-group
        = f.label :role, class: "control-label col-lg-2 black"
        .col-lg-6
          .form-control-static.black
            = @user.role

      .form-group
        = f.label :password, "New Password", class: "control-label col-lg-2 black"
        .col-lg-6
          = f.password_field :password, class: "form-control"

      .form-group
        = f.label :password_confirmation, "New Password Confirmation", class: "control-label col-lg-2 black"
        .col-lg-6
          = f.password_field :password_confirmation, class: "form-control"

      .form-group
      .col-lg-offset-4
        = f.submit "Update", class: "btn btn-success btn-sm"
        = link_to "Back", users_path, class: 'btn btn-danger btn-sm'
  .col-md-1
