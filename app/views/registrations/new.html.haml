.row
  .col-md-offset-1.col-md-10.col-md-offset-1
    %h4.black Add New User
.row
  .col-md-1
  .col-md-10.well
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { class: "form-horizontal" }) do |f|

      .form-group
        = f.label :email, class: "control-label col-lg-2"
        .col-lg-6
          = f.email_field :email, class: "form-control"

      .form-group
        = f.label :role, class: "control-label col-lg-2"
        .col-lg-6
          = f.select :role, [ ['admin', 'admin'], ['superadmin', 'superadmin']], class: "form-control"
      .form-group
        = f.label :password, "New Password", class: "control-label col-lg-2"
        .col-lg-6
          = f.password_field :password, class: "form-control"

      .form-group
        = f.label :password_confirmation, "New Password Confirmation", class: "control-label col-lg-2"
        .col-lg-6
          = f.password_field :password_confirmation, class: "form-control"
      .form-group
      .col-lg-offset-4
        = f.submit "Add", class: "btn btn-success btn-sm"
        = link_to "Back", users_path, class: 'btn btn-danger btn-sm'
  .col-md-1
